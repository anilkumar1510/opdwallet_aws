# Simple production Dockerfile for Next.js
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy application code
COPY . .

# Build the Next.js application
ENV NODE_ENV=production
ENV NEXT_PUBLIC_API_URL=http://51.20.125.246/api

RUN npm run build

# Expose port
EXPOSE 3002

# Start the application
CMD ["npm", "start"]
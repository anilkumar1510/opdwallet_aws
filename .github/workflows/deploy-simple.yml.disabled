name: Simple Deploy to EC2

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    timeout-minutes: 60

    steps:
      - name: Deploy via SSH
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.EC2_HOST }}
          username: ubuntu
          key: ${{ secrets.EC2_SSH_KEY }}
          port: 22
          command_timeout: 55m

          script: |
            cd ~/opdwallet
            git pull origin main

            echo "üßπ Running container cleanup to prevent port conflicts..."
            chmod +x scripts/cleanup-containers.sh 2>/dev/null || true
            ./scripts/cleanup-containers.sh || echo "‚ö†Ô∏è Cleanup script not found, proceeding with manual cleanup"

            echo "üõ† Stopping existing containers..."
            docker-compose -f docker-compose.simple.yml down

            # Manual fallback cleanup
            docker stop $(docker ps -q --filter name="opd-") 2>/dev/null || true
            docker rm $(docker ps -aq --filter name="opd-") 2>/dev/null || true

            # Check for port conflicts
            echo "üîç Checking for port conflicts..."
            CONFLICTS=$(netstat -tuln 2>/dev/null | grep -E ":(4000|3001|3002|80) " || true)
            if [ ! -z "$CONFLICTS" ]; then
              echo "‚ö†Ô∏è Warning: Found services using deployment ports:"
              echo "$CONFLICTS"
              sudo fuser -k 4000/tcp 3001/tcp 3002/tcp 80/tcp 2>/dev/null || true
              sleep 3
            fi

            echo "‚ôªÔ∏è Building containers..."
            docker-compose -f docker-compose.simple.yml build --no-cache

            docker-compose -f docker-compose.simple.yml up -d

            # Verify deployment
            echo "üîç Post-deployment verification..."
            sleep 10
            docker ps

            echo "‚úÖ Deployment complete"